
<h1> Transactions for <%= user.username %> </h1>

  <div class="row">
    <div class="col">
      <p> Here is your list of things to do! </p>
      
    
      <p class="m-2">
        <a class="btn btn-lg btn-primary"
        href="/transaction/byCategory">group by category</a>
          <a class="btn btn-lg btn-primary"
              href="?sortBy=category">sort by category</a>
          <a class="btn btn-lg btn-primary"
              href="?sortBy=amount">sort by amount</a>
            <a class="btn btn-lg btn-primary"
              href="?sortBy=description">sort by description</a>
            <a class="btn btn-lg btn-primary"
              href="?sortBy=date">sort by date</a>
      </p>

      <table class="table">
        <tr>
            <th>description</th>
            <th>amount</th>
            <th>category</th>
            <th>date</th>
            <th>delete</th>
            <th>edit</th>
        </tr>
        <% transactions.forEach(transaction => { %>
            <tr>
                <td>
                  <%= transaction.description %>
                </td>
                <td>
                  <%= transaction.amount %>
                </td>
                <td>
                  <%= transaction.category %>
                </td>
                <td>
                  <%= transaction.date %>
                </td>
                <td>
                    <a href="/transaction/remove/<%=transaction._id %>">
                      <i class="bi bi-trash"></i>
                    </a>
                </td>
                <td>
                  <a 
                     href="/transaction/edit/<%=transaction._id %>">
                  <i class="bi bi-pencil-square"></i>
              </a>
                </td>
            </tr>
        <% }) %>
      </table>
       
        <form method="post" action="transaction">
            <input type="text" name="description" placeholder="description">
            <br>
            <input type="text" name="category" placeholder="category">
            <br>
            <input type="number" name="amount" placeholder="amount">
            <br>
            <input type="date" name="date" placeholder="date">
            <br>
            <input type="submit" value="store">
        </form>
      </div>
</div>
